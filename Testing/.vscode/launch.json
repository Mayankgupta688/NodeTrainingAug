{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Jest: All tests",
      "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
      "args": ["-i", "--runInBand", "--watchAll=true"],
      "cwd": "${workspaceFolder}",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}